<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>valentin CROCHEMORE</title>
         <!-- core CSS -->
        <link href="{{ app.request.basepath }}/css/bootstrap.min.css" rel="stylesheet">
         <link href="{{ app.request.basepath }}/css/starter-template.css" rel="stylesheet">
        <link href="{{ app.request.basepath }}/css/stickyfooter.css" rel="stylesheet">

        <!-- JS -->
         <script src="{{ app.request.basepath }}/js/jquery-2.1.4.min.js"></script>
         <script src="{{ app.request.basepath }}/js/bootstrap.min.js"></script>
         <script src="{{ app.request.basepath }}/js/html5shiv.min.js"></script>
         <script src="{{ app.request.basepath }}/js/respond.min.js"></script>
         <script src="{{ app.request.basepath }}/js/angular.min.js"></script>
    </head>
    <body>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('home') }}">CROCHEMORE Valentin</a>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li{% if active == "cv" %} class="active" {% endif %}><a href="{{ path('cv') }}">C.V</a></li>
                        <li{% if active == "game" %} class="active" {% endif %}><a href="{{ path('game') }}" >Jeux</a></li>
                        <li{% if active == "users" %} class="active" {% endif %}><a href="{{ path('users') }}" >Joueurs</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            {% if app.session.get("connected") %}
                                {{ app.session.get("user").username }}
                            {% else %}
                                Non connecté
                            {% endif %}
                            <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                {% if app.session.get("connected") %}
                                    <li><a href="{{ path('user', {'id': app.session.get('user').id}) }}">Profil</a></li>
                                    {% if app.session.get("user").role == 1 %}
                                        <li role="separator" class="divider"></li>
                                        <li><a href="{{ path('admin') }}">Administration</a></li>
                                    {% endif %}
                                    <li role="separator" class="divider"></li>
                                    <li><a href="{{ path('logout') }}">Se déconnecter</a></li>
                                {% else %}
                                    <li><a href="{{ path('login') }}">Se connecter</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li><a href="{{ path('signup') }}">S'inscrire</a></li>
                                {% endif %}
                            </ul>
                        </li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
        <div class="container">
            {% for message in app.session.getFlashBag.get('message') %}
                <div class="row message">
                    <div class="col-lg-offset-2 col-lg-8 col-md-offset-2 col-md-8 col-sm-8 col-xs-12">
                        <div class="alert alert-dismissible alert-{{ message.type }}" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            <span class="sr-only">Error:</span>
                            {{ message.content }}
                        </div>
                    </div>
                </div>
            {% endfor %}
            {% block content %}

            {% endblock %}
        </div>
        <footer class="footer">
            <div class="container">
                <p>
                    © 2015 Copyright CROCHEMORE Valentin. {{ version }}
                </p>
            </div>
        </footer>
    </body>
</html>